{
    "format": {
        "type": "json_schema",
        "name": "replicates-defined",
        "schema": {
            "type": "object",
            "properties": {
                "outputs": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "panel_label": {
                                "type": "string",
                                "description": "Label of the panel (e.g., A, B, C)"
                            },
                            "involves_replicates": {
                                "type": "string",
                                "enum": ["yes", "no"],
                                "description": "Whether the experiment involves replicates"
                            },
                            "number_of_replicates": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "description": "Number of replicates of a given type"
                                },
                                "description": "Number of replicates for each type of replicates"
                            },
                            "type_of_replicates": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "description": "The type of replicates"
                                },
                                "description": "List of types of replicates"
                            } 
                        },
                        "required": [
                            "panel_label",
                            "involves_replicates",
                            "number_of_replicates",
                            "type_of_replicates"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": ["outputs"],
            "additionalProperties": false
        },
        "strict": true
    }
}